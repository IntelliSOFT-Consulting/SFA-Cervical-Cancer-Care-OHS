{
    "urn": "urn:mediator:shr-passthrough",
    "version": "1.0.0",
    "name": "SHR Mediator",
    "description": "This mediator is responsible for handling SHR bound requests.",
    "defaultChannelConfig": [
        {
            "name": "SHR Channel",
            "urlPattern": "^/fhir/.*$",
            "routes": [
                {
                    "name": "SHR Route",
                    "host": "hapi-fhir-jpa",
                    "pathTransform": "s/\/\/.*$/",
                    "port": "8080",
                    "primary": true,
                    "type": "http"
                }
            ],
            "allow": ["*"],
            "methods": ["GET", "POST", "PUT", "PATCH"],
            "type": "http"
        }
    ],
    "endpoints": [
        {
            "name": "SHR Mediator Endpoint",
            "host": "hapi-fhir-jpa",
            "path": "/fhir",
            "port": "8080",
            "primary": true,
            "type": "http"
        }
    ]
}
