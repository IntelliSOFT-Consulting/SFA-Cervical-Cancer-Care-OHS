{
    "urn": "urn:mediator:referrals-mediator",
    "version": "1.0.0",
    "name": "Referrals Mediator",
    "description": "This mediator is responsible for handling Referrals requests.",
    "defaultChannelConfig": [
      {
        "name": "SHR Channel",
        "urlPattern": "^/referrals/.*$",
        "routes": [
          {
            "name": "SHR Route",
            "host": "hapi-fhir-jpa",
            "pathTransform": "s/\/\/.*$/",
            "port": "8080",
            "primary": true,
            "type": "http"
          }
        ],
        "allow": ["*"],
        "methods": ["GET", "POST", "PUT", "PATCH"],
        "type": "http"
      }
    ],
    "endpoints": [
      {
        "name": "SHR Mediator Endpoint",
        "host": "echis-mediators",
        "path": "/referrals",
        "port": "8080",
        "primary": true,
        "type": "http"
      }
    ]
  }